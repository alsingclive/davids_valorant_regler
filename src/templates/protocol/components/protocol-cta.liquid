{% case data.config.align %}

{% when "left" %}
{% assign itemsAlign = "justify-start" %}

{% when "center" %}
{% assign itemsAlign = "justify-center" %}

{% when "right" %}
{% assign itemsAlign = "justify-end" %}

{% endcase %}

{% case data.variant %}

{% when "primary" %}
{% assign variant = "rounded-full py-2 px-4 bg-primary/10 text-primary ring-1 ring-inset ring-primary/20 hover:text-primary-light hover:ring-primary-light hover:shadow-lg
hover:shadow-primary-dark/20" %}

{% when "secondary" %}
{% assign variant = "rounded-full py-2 px-4 text-zinc-400 ring-1 ring-inset ring-zinc-800 hover:bg-zinc-800 hover:text-zinc-300 hover:ring-zinc-700" %}

{% else %}
{% assign variant = "text-primary hover:text-primary-dark my-2" %}

{% endcase %}

<a class="inline-flex gap-0.5 overflow-hidden text-sm font-medium transition {% if data.config.span == true %}w-full{% endif %} min-[512px]:w-max {{ itemsAlign }} {{ variant }}"
  href="{{ data.href }}" {% if data.target=="_blank" %}target="_blank" {% endif %}>
  <span>{{ data.text }}</span>

  {% if data.icon != blank %}
  <i class="material-symbols-outlined text-xl leading-none {% if data.config.reverse == true %}-order-1{% endif %}" aria-hidden="true" role="img" data-icon="{{ data.icon }}"></i>
  {% endif %}

</a>