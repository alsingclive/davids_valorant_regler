<div class="hidden lg:block lg:max-w-md lg:flex-auto relative mr-auto">
  <input type="text" {% if data.placeholder !=blank %}placeholder="{{ data.placeholder }}" {% endif %}
    class="peer hidden h-8 w-full items-center gap-2 rounded-full bg-white pl-9 pr-3 text-sm ring-1 transition bg-white/5 text-zinc-400 ring-inset ring-white/10 hover:ring-white/20 lg:flex focus:ring-primary focus:outline-none">

  {% if data.icon != blank %}
  <i class="material-symbols-outlined absolute text-zinc-500 text-xl left-2 bottom-0 transition peer-focus:text-primary pointer-events-none" aria-hidden="true" role="img"
    data-icon="{{ data.icon }}"></i>
  {% endif %}

</div>