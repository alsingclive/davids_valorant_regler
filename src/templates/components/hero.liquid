{% block hero %}

  <div class="w-full min-h-screen bg-right bg-cover bg-fixed" style="background-image: url('{{ data.hero_image }}');">
    <div class="w-full h-full min-h-screen bg-black/60 md:bg-black/25 flex flex-col justify-end">
      <div class="flex flex-col justify-center md:justify-end p-12 md:p-24 text-white text-center md:text-left my-auto md:my-0">
        <h1 class="text-3xl md:text-6xl font-extrabold font-serif text-center md:text-start">{{ data.title }}</h1>
        {% if data.subtitle != blank %}
          <h2 class="text-2xl md:text-4xl text-center md:text-start mt-3">{{ data.subtitle }}</h2>
        {% endif %}
        {% if data.text != blank %}
          <hr class="block border-1 w-36 max-w-full my-3 md:my-6 border-transparent bg-transparent md:border-goldish md:bg-goldish" />
          <p class="text-lg">{{ data.text }}</p>
        {% endif %}

      </div>
    </div>
  </div>

{% endblock %}