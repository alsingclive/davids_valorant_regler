{% block pricing %}

  <section
    id="pricing"
    aria-label="Pricing"
    class="bg-slate-900 py-20 sm:py-32">
    <div
      class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div
        class="md:text-center">
        <h2
          class="font-display text-3xl tracking-tight text-white sm:text-4xl">
          {{ data.title }}
        </h2>
        <p
          class="mt-4 text-lg text-slate-400">
          {{ data.subtitle }}
        </p>
      </div>
      <div
        class="-mx-4 mt-16 grid max-w-2xl grid-cols-1 gap-y-10 sm:mx-auto lg:-mx-8 lg:max-w-none lg:grid-cols-3 xl:mx-0 xl:gap-x-8">
        {% for section in data.sections %}
          <section
            class="flex flex-col rounded-3xl px-6 sm:px-8 {% if section.order == "first" %} bg-slate-600 py-8 {% else %} lg:py-8 lg:order-none {% endif %}">
            <h3
              class="mt-5 font-display text-lg text-white">{{ section.title }}</h3>
            <p
              class="mt-2 text-base {% if section.order == "first" %} text-white {% else %} text-slate-400 {% endif %}">
              {{ section.description }}
            </p>
            <p
              class="order-first font-display text-5xl font-light tracking-tight text-white">
              {{ section.price }}
            </p>
            <ul
              role="list"
              class="order-last mt-10 flex flex-col gap-y-3 text-sm {% if section.order == "first" %} text-white {% else %} text-slate-200 {% endif %}">

              {% for feature in section.features %}
                <li
                  class="flex">
                  <svg
                    aria-hidden="true"
                    class="h-6 w-6 flex-none fill-current stroke-current{% if section.order == "first" %}
                      text-white
                    {% else %}
                      text-slate-400
                    {% endif %}">
                    <path
                      d="M9.307 12.248a.75.75 0 1 0-1.114 1.004l1.114-1.004ZM11 15.25l-.557.502a.75.75 0 0 0 1.15-.043L11 15.25Zm4.844-5.041a.75.75 0 0 0-1.188-.918l1.188.918Zm-7.651 3.043 2.25 2.5 1.114-1.004-2.25-2.5-1.114 1.004Zm3.4 2.457 4.25-5.5-1.187-.918-4.25 5.5 1.188.918Z"
                      strokeWidth="0" />
                    <circle
                      cx="12"
                      cy="12"
                      r="8.25"
                      fill="none"
                      strokeWidth="1.5"
                      strokeLinecap="round"
                      strokeLinejoin="round">
                  </svg>
                  <span
                    class="ml-4">{{ feature }}</span>
                </li>
              {% endfor %}

            </ul>

            {% render '/templates/salient/components/button.liquid', button: section.button %}

          </section>
        {% endfor %}


      </div>
    </div>
  </section>
{% endblock %}