<div class="reveal fade-bottom flex flex-col-reverse w-full bg-white group min-h-[500px] employee-card overflow-hidden rounded-2xl">
  <div class="p-4 more">
    <h3 class="text-2xl font-bold">{{ data.title }}</h3>
    {% if data.subtitle != blank %}
    <h4 class="text-zinc-600">{{ data.subtitle }}</h4>
    {% endif %}
    <div class="icon-more w-full flex justify-center min-h-[0.5rem]">
      <i class="material-icons text-black/25 transition-[font-size] ease-out duration-700" aria-hidden="true" role="img" data-icon="keyboard_arrow_down"></i>
    </div>

    <div class="max-h-0 w-full group-hover:max-h-52 transition-all truncate ease-in-out duration-700 inline-block">

      {% if data.text %}
      <p class="break-words w-full inline-block whitespace-normal mb-2">{{ data.text }}</p>
      {% endif %}

      {% if data.links %}
      <ul>
        {% for link in data.links %}
        <li class="mt-1 underline text-zinc-600">
          <a href="{{ link.href }}" {% if link.title !=blank %} title="{{ link.title }}" {% endif %}>
            {{ link.text }}
          </a>
        </li>
        {% endfor %}
      </ul>
      {% endif %}

      {% if data.buttons %}
      <div class="flex justify-center items-center mt-3">
        {% for button in data.buttons %}
        <a href="{{ button.href }}" {% if button.title !=blank %} title="{{ button.title }}" {% endif %} class="flex flex-row justify-center w-48 py-3 rounded-full">
          {{ button.text }}
          {% if button.icon != blank %}
          <i class="material-symbols-outlined px-2" aria-hidden="true" role="img" data-icon="{{ button.icon }}"></i>
          {% endif %}
        </a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
  <div class="w-full bg-cover bg-top bg-no-repeat bg-white flex-1" style="background-image: url({{ data.image }}); background-position-y:17%;"></div>
</div>