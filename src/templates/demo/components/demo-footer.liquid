<div {% if id !=blank %} id="{{ id }}" {% endif %} class="text-white w-full bg-cover bg-center min-h-screen md:min-h-1/2 bg-fixed bg-black"
  style="background-image: url({{ data.image }});">
  <div class="flex flex-col min-h-screen md:h-full justify-center text-center items-center p-12 md:px-24 bg-black/60 md:bg-black/25 ">
    <div class="reveal fade-bottom flex flex-col min-h-screen md:h-full justify-center text-center items-center">
      {% if data.title != blank %}
      <h2 class="text-3xl md:text-5xl font-extrabold font-serif my-4">{{ data.title }}</h2>
      {% endif %}
      {% if data.subtitle != blank %}
      <h3 class="text-xl md:text-2xl mb-4">{{ data.subtitle }}</h3>
      {% endif %}

      {% if data.text != blank %}
      <hr class="border-1.5 w-36 max-w-full my-6 border-primary bg-primary opacity-50" />
      {% endif %}

      {% if data.text.first %}
      {% for text in data.text %}
      <p class="my-2">{{ text }}</p>
      {% endfor %}
      {% else if data.text != blank %}
      <p>{{ data.text }}</p>
      {% endif %}

      {% if data.links.first %}
      <div class="flex flex-col md:flex-row pt-6 w-full md:w-auto">
        {% for link in data.links %}
        <a href="{{ link.href }}" {% if link.target !=blank %} target="{{ link.target }}" {% endif %} {% if link.rel !=blank %} rel="{{ link.rel }}" {% endif %}
          class="my-2 end flex flex-row justify-center w-full md:w-auto rounded-full items-center px-9 py-3 mr-4 transition-colors {% if forloop.last != true %} border border-white/80 bg-transparent hover:border-white hover:bg-white/10 {% else %} bg-primary-dark hover:bg-primary{% endif %} ">
          {{ link.text }}
          {% if link.icon != blank %}
          <i class="material-symbols-outlined pl-3" aria-hidden="true" role="img" data-icon="{{ link.icon }}"></i>
          {% endif %}
        </a>
        {% endfor %}
      </div>
      {% endif %}
    </div>

  </div>
</div>