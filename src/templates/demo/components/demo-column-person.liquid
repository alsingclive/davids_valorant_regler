<div {% if id !=blank %} id="{{ id }}" {% endif %} class="w-full bg-gray-100">
  <div class="max-w-screen-2xl mx-auto flex flex-col md:flex-row ">
    <div class="reveal fade-bottom md:w-1/2 xl:w-2/3 {% if data.person_first %} order-1 {% endif %}">
      <div class="flex flex-col p-12">
        <h2 class="text-5xl font-extrabold font-serif my-4">{{ data.title }}</h2>
        <p class="text-lg py-3">{{ data.text }}</p>
        {% if data.button %}
        <a href="{{ data.button.href }}" {% if link.title !=blank %} title="{{ link.title }}" {% endif %}
          class="mt-3 flex flex-row justify-center md:w-fit px-9 py-3 rounded-full transition-colors bg-primary text-white hover:bg-primary-dark">
          <p>{{ data.button.text }}</p>
          {% if data.button.icon != blank %}
          <i class="material-symbols-outlined px-2" aria-hidden="true" role="img"
            data-icon="{{ data.button.icon }}"></i>
          {% endif %}
        </a>
        {% endif %}
      </div>
    </div>

    <div class="p-12 md:w-1/2 xl:w-1/3">
      {% render "/templates/demo/components/demo-person.liquid", data: data.character %}
    </div>
  </div>
</div>