<div {% if id !=blank %}id="{{ id }}" {% endif %} class="w-full bg-green-dark">
  <div class="reveal fade-bottom max-w-screen-2xl mx-auto flex flex-col md:flex-row ">
    <div class="w-full">
      <div class="flex flex-col p-4 md:p-12">
        <div class="flex flex-col">
          <h2 class="text-3xl md:text-5xl font-extrabold font-serif my-4 text-goldish">{{ data.title }}</h2>
          {% if data.subtitle != blank %}
          <h3 class="text-xl mb-4">{{ data.subtitle }}</h3>
          {% endif %}
          {% if data.text != blank %}
          <p class="mb-4">{{ data.text }}</p>
          {% endif %}
          {% for link in data.links %}
          <a href="{{ link.href }}" target="_blank"
            class="cursor-pointer mt-4 group w-full flex flex-row items-center justify-between rounded-2xl bg-zinc-500/5 hover:bg-zinc-500/10 transition-colors duration-300">
            <div class="flex flex-col p-8">
              <div class="flex flex-col md:flex-row items-start md:items-center justify-start">
                <h3 class="text-xl md:text-2xl font-extrabold text-goldish">{{ link.title }}
                </h3>
                {% for chip in link.chips %}
                <div class="rounded border border-1 border-goldish/30 my-1 md:my-0 md:ml-4">
                  <p class="text-goldish/30 px-2 text-sm font-bold uppercase">{{ chip }}
                  </p>
                </div>
                {% endfor %}
              </div>
              <p class="">{{ link.text }}
              </p>
            </div>
            <i class="transition-[margin-right,color] duration-300 material-symbols-outlined text-5xl mr-4 group-hover:mr-8" aria-hidden="true" role="img"
              data-icon="keyboard_arrow_right"></i>
          </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>