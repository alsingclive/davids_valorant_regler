<div {% if id !=blank %} id="{{ id }}" {% endif %} class="{% if data.gray %} bg-gray-100" {% endif %}">
  <div class="w-full max-w-screen-2xl mx-auto flex flex-col items-center text-center py-12">

    {% render "/templates/demo/components/demo-centered-header.liquid", data: data %}

    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 px-12">

      {% for box in data.boxes %}

      <div class="reveal fade-bottom flex flex-row items-center rounded-2xl bg-zinc-500/5 p-7">
        <div class="flex flex-col text-left">
          <h3 class="text-xl text-goldish font-extrabold">{{ box.title }}</h3>
          <p class="pt-1">{{ box.text }}</p>
        </div>
      </div>

      {% endfor %}

    </div>
  </div>
</div>