{% block simple-layout %}

  <div
    class="mx-auto max-w-2xl lg:max-w-5xl mt-16 lg:mt-32">
    <header
      class="max-w-2xl">
      <h1
        class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
        {{ data.title }}
      </h1>
      {% for text in data.text %}
        <p
          class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
          {{ text }}
        </p>
      {% endfor %}

    </header>
    <div
      class="mt-16 sm:mt-20">
      {% for section in data.section %}
        {% render '/templates/spotlight/components/section.liquid', data: section %}
      {% endfor %}

    </div>
  </div>

{% endblock %}