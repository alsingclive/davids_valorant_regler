{% block gallery %}

  <div
    id="{{data.id}}"
    class="-my-4 flex justify-center gap-5 overflow-hidden py-20 sm:gap-8">

    {% for image in data.gallery %}
      <div
        class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl odd:rotate-2 even:-rotate-2">
        <img
          alt="{{image.alt}}"
          sizes="(min-width: 640px) 18rem, 11rem"
          src="{{image.src}}"
          width="3744"
          height="5616"
          decoding="async"
          data-nimg="1"
          class="absolute inset-0 h-full w-full object-cover"
          loading="lazy"
          style="color:transparent"></div>
    {% endfor %}

  </div>


{% endblock %}