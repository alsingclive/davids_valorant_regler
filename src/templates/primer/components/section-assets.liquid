{% block section-assets %}

  <section
    id="{{data.id}}"
    aria-labelledby="{{data.id}}"
    class="scroll-mt-14 py-16 sm:scroll-mt-32 sm:py-20 lg:py-32">

    {% render '/templates/primer/components/section-heading.liquid', data: data %}

    <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:max-w-7xl lg:px-8 mt-16">
      <ol role="list" class="-mx-3 grid grid-cols-1 gap-y-10 lg:grid-cols-3 lg:text-center xl:-mx-12 xl:divide-x xl:divide-slate-400/20">

        {% for asset in data.list %}
          <li class="grid auto-rows-min grid-cols-1 items-center gap-8 px-3 sm:grid-cols-2 sm:gap-y-10 lg:grid-cols-1 xl:px-12">
            <div class="relative h-48 overflow-hidden rounded-2xl shadow-lg sm:h-60 lg:h-40">
              <div class="absolute inset-0 flex items-center justify-center bg-gradient-to-r from-pink-600 via-blue-600 to-purple-700"><img
                  alt="{{asset.img.alt}}"
                  src="{{asset.img.src}}"
                  width="160"
                  height="144"
                  decoding="async"
                  loading="lazy"
                  style="color:transparent"></div>
            </div>
            <div>
              <h3 class="text-base font-medium tracking-tight text-slate-900">{{ asset.title }}</h3>
              <p class="mt-2 text-sm text-slate-600">{{ asset.text }}</p>
            </div>
          </li>

        {% endfor %}



      </ol>
    </div>
  </section>

{% endblock %}