{% block section-text %}

  <section
    id="{{data.id}}"
    aria-label="{{data.id}}"
    class="pb-16 pt-20 sm:pb-20 md:pt-36 lg:py-32">
    <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:max-w-4xl lg:px-12 text-lg tracking-tight text-slate-700">
      <p class="font-display text-4xl font-bold tracking-tight text-slate-900">{{ data.subtitle }}</p>
      {% for text in data.text %}
        <p class="mt-4">{{ text }}</p>
      {% endfor %}
      <ul role="list" class="mt-8 space-y-3">
        {% for item in data.list %}
          <li class="flex">

            <svg aria-hidden="true" viewBox="0 0 32 32" class="h-8 w-8 flex-none fill-blue-500"><path d="M11.83 15.795a1 1 0 0 0-1.66 1.114l1.66-1.114Zm9.861-4.072a1 1 0 1 0-1.382-1.446l1.382 1.446ZM14.115 21l-.83.557a1 1 0 0 0 1.784-.258L14.115 21Zm.954.3c1.29-4.11 3.539-6.63 6.622-9.577l-1.382-1.446c-3.152 3.013-5.704 5.82-7.148 10.424l1.908.598Zm-4.9-4.391 3.115 4.648 1.661-1.114-3.114-4.648-1.662 1.114Z"></path>
            </svg> 

            <span class="ml-4">{{ item }}</span>
          </li>
        {% endfor %}
      </ul>
      <p class="mt-8">{{data.conclusion}}</p>
      {% for link in data.link %}
      <p class="mt-10">
        <a class="text-base font-medium text-blue-600 hover:text-blue-800" href="{{link.href}}">{{link.text}}
        </a>
      </p>
      {% endfor %}

    </div>
  </section>

{% endblock %}