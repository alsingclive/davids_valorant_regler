{% script "/templates/pocket/components/pocket-primary-features.js", location: "footer", async %}

<section {% if data.id !=blank %}id="{{ data.id }}" {% endif %} class="bg-zinc-900 py-20 sm:py-32 min-h-screen overflow-x-hidden">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-3xl">
      <h2 class="text-4xl font-medium tracking-tight text-zinc-100">{{ data.title }}</h2>
      <p class="mt-2 text-lg text-zinc-400">{{ data.subtitle }}</p>
    </div>
  </div>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-12 md:mt-20 block">

    {% render "/templates/pocket/components/pocket-features.liquid" data: data %}

  </div>
</section>